<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Общий сьют" parallel="classes" thread-count="3">
    <test name="InternetExplorer Test">
        <parameter name="browser" value="InternetExplorer"/>
        <parameter name="grid" value="true"/>
        <classes>
            <class name="tests.ProfilePageTest"/>
            <class name="tests.InterestPageTest"/>
        </classes>
    </test>

    <test name="Firefox Test">
        <parameter name="grid" value="false"/>
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="tests.PaymentPageTest"/>
        </classes>
    </test>
    <test name="Edge Test">
        <parameter name="grid" value="true"/>
        <parameter name="browser" value="Edge"/>
        <classes>
            <class name="tests.FormDataProviderTest"/>
        </classes>
    </test>
    <test name="Chrome Test">
        <parameter name="grid" value="false"/>
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="tests.CookiesTest"/>
            <class name="tests.JavaScriptExecutorTest"/>
            <class name="tests.TabsPageTest"/>
        </classes>
    </test>
</suite>